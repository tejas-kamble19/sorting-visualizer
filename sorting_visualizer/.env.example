# Environment Variables Template for Sorting Algorithm Visualizer
# Copy this file to .env and customize the values as needed

# Application Configuration
APP_NAME="Sorting Algorithm Visualizer"
VERSION="1.0.0"
DEBUG=False

# Window Configuration
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
FULLSCREEN=False

# Animation Settings
DEFAULT_ANIMATION_SPEED=5
ENABLE_SOUND_EFFECTS=False
SMOOTH_ANIMATIONS=True

# Performance Settings
MAX_ARRAY_SIZE=500
ENABLE_PERFORMANCE_MODE=False

# Theme Settings
COLOR_THEME="default"

# Logging Configuration
LOG_LEVEL="INFO"
LOG_TO_FILE=False
